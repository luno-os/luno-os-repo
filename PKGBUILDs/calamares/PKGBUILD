# Maintainer: NotPhish <your@email.com>
pkgname=luno-calamares
pkgver=3.3.14
pkgrel=1
pkgdesc="Luno OS customized Calamares installer"
arch=('x86_64')
url="https://github.com/luno-os/luno-calamares"
license=('GPL')
depends=(
  qt5-base
  qt5-svg
  qt5-tools
  qt5-quickcontrols
  yaml-cpp
  boost-libs
  python
)
makedepends=('git' 'cmake' 'boost' 'extra-cmake-modules')
source=("git+https://github.com/luno-os/luno-calamares.git")
sha256sums=('SKIP')

build() {
  cd "$srcdir/luno-calamares"
  mkdir -p build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make -j$(nproc)
}

package() {
  cd "$srcdir/luno-calamares/build"
  make DESTDIR="$pkgdir" install
}
